<section class="cats">
    {{#if cats}}
    <ul>
        {{#each cats}}
        <li>
            <img src="/images/{{this.image}}" alt="{{this.name}}">
            <h3></h3>
            <p><span>Breed: </span>{{this.breed}}</p>
            <p><span>Description: </span>{{this.description}}</p>
            <ul class="buttons">
                <li class="btn edit"><a href="/edit/{{this.id}}">Change Info</a></li>
                <li class="btn delete"><a href="/new-home/{{this.id}}">New Home</a></li>
            </ul>
        </li>
        {{/each}}
    </ul>
    {{else}}
    <p>No cats in the shelter!</p>
    {{/if}}
</section>